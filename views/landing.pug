extends ./layouts/mainLayout.pug

block content
  style.
    #background-section {
      background-image: url('#{landing.image}');
      background-size: cover;
      background-position: center;
      min-width: 100vw;
      height: 100vh;
      display: flex; /* Activa Flexbox */
      justify-content: flex-start; /* Centra horizontalmente (opcional) */
      align-items: center; /* Centra verticalmente */
    }
  section.container-fluid(id="background-section")
    div.container-caption
      .caption-title.ms-5
            h1= landing.title 
            p.lead= landing.description
            p.lead 
            a.btn.btn-lg.btn-dark.fw-bold(href='/') Ver m√°s: 
  //-hr.featurette-divider
  section.container.marketing.mt-4.ms-4 
        .row
          each inf in info
            .col-lg-4
              img.bd-placeholder-img(src=inf.logo, width="100", height="100", alt="Placeholder")
              h2.fw-normal= inf.title
              p= inf.infoHeader
              p
                a.btn.btn-sm.btn-outline-primary(href=`/detalles`) Ver detalles &raquo;

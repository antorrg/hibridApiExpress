<%- include('./partials/header') %>

<main>
  <section>
    <div class="container">
      <div class="text-center py-5">
        <div class="row py-lg-5">
          <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Proyectos realizados:</h1>
            <!-- <p class="lead text-muted">Proyectos realizados hasta el día de la fecha</p> -->
          </div>
        </div>
      </div>
    </div>
  </section>

  <div class="album py-5">
    <div class="container backgroundElements">
      <%
        const chunk = (arr, size) => {
          return arr.reduce((acc, _, i) => {
            if (i % size) {
              acc[acc.length - 1].push(arr[i]);
            } else {
              acc.push([arr[i]]);
            }
            return acc;
          }, []);
        };
        const rows = chunk(info, 3);
      %>

      <% rows.forEach(row => { %>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
          <% row.forEach(info => { %>
            <div class="col">
              <div class="card shadow-sm">
                <img class="card-img-top" src="<%= info.landing %>" alt="Card image" style="max-width: 25rem; height:15rem; object-fit:cover; object-position:center;">
                <div class="card-body">
                  <p class="h5 card-text"><%= info.title %></p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <a class="btn btn-sm btn-outline-secondary" href="/detalles/<%= info.id %>">Ver más</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% }) %>

      <a class="btn btn-sm btn-outline-secondary ms-4 mt-2 mb-3" href="/">Volver</a>
    </div>
  </div>
</main>

<%- include('./partials/footer') %>

extends ./layouts/mainLayout.pug

block content
  section
    .container
      .text-center.py-5
        .row.py-lg-5
          .col-lg-6.col-md-8.mx-auto
            h1.fw-light Proyectos realizados:
            p.lead.text-muted Proyectos realizados hasta el día de la fecha

    .album.py-5
        .container.backgroundElements
          - const chunk = (arr, size) => {
          -   return arr.reduce((acc, _, i) => {
          -     if (i % size) {
          -       acc[acc.length - 1].push(arr[i]);
          -     } else {
          -       acc.push([arr[i]]);
          -     }
          -     return acc;
          -   }, []);
          - };
          - const rows = chunk(info, 3);
          each row in rows
            .row.row-cols-1.row-cols-sm-2.row-cols-md-3.g-3
              each info in row
                .col
                  .card.shadow-sm
                    img.card-img-top(src=info.landing, alt='Card image')
                    .card-body
                      p.h5.card-text= info.title
                      .d-flex.justify-content-between.align-items-center
                        .btn-group
                          a.btn.btn-sm.btn-outline-secondary(href=`/detalles/${info.id}`) Ver más
    a.btn.btn-sm.btn-outline-secondary.ms-4.mb-3(href=`/`) Volver

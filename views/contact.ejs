<%- include('./partials/header') %>

<main>
  <div class="backgroundPages" style="min-height: 100vh;">
    <div class="coverBackPages">
      <div class="container-sm modal-content textFormPagesContainer backgroundFormColor rounded-2 shadow">
        <div class="container mt-4">
          <h1>Contacto:</h1>
          <form id="sendEmail">
            <div class="row">
              <div class="col-md-12 mb-3">
                <label class="form-label" for="email">Su email:</label>
                <input class="form-control" type="email" id="email" name="email" placeholder="Su email..." required>
                <p id="errorEmail" class="error"></p>
              </div>
              <div class="col-md-12">
                <label class="form-label" for="subject">Asunto:</label>
                <input class="form-control" name="subject" id="subject" type="text" placeholder="Asunto..." required>
                <p id="errorSubject" class="error"></p>
              </div>
              <div class="col-md-12">
                <label class="form-label" for="message">Mensaje:</label>
                <textarea class="form-control" name="message" id="message" placeholder="Su mensaje..." required></textarea>
                <p id="errorMessage" class="error"></p>
              </div>
            </div>
            <div class="d-flex flex-row justify-content-between align-items-center">
              <button class="btn btn-sm btn-primary" id="submitButton" type="submit" disabled>Enviar</button>
              <button class="btn btn-sm btn-outline-secondary mt-3 me-3 mb-4" id="cancelButton" type="button">Cancelar</button>
            </div>
          </form>
          <a class="btn btn-sm btn-outline-success mt-3 me-3 mb-4 mx-auto w-15" href="<%= uriWhatsApp %>" target="_blank">
            <i class="bi bi-whatsapp"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('./partials/footer') %>
